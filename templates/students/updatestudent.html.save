{% extends 'adminpanel/index.html' %}
{% block content %}
{% load static %}
<div class="wlsm-main-header card col">
	<div class="school_header">
		<h1 class="h3 text-center">
			<i class="fa fa-graduation-cap text-light"></i>
			{{skool}}<small class="wlsm_text_secondary">{{year}}</small>

					</h1>

			</div>

<div class="mt-3 text-center wlsm-section-heading-block">
			<span class="wlsm-section-heading-box">
				<span class="wlsm-section-heading">
					Students
				</span>
			</span>
 </div>

<div class="col-11">
<form id="addstudform"   data-section-url = "{% url 'ajax_load_section' %}" data-uclass-url="{% url 'ajax_load_uclass' %}"  method="POST" enctype="multipart/form-data">
    {% csrf_token %}
 <div class="wlsm-form-section">
				<div class="row">
					<div class="col-md-12">
						<div class="wlsm-form-sub-heading wlsm-font-bold">
							Personal Detail						</div>
					</div>
				</div>

				<div class="form-row">
					<div class="form-group col-md-4">
						<label class="wlsm-font-bold">
							<span class="wlsm-important">*</span> First Name:
						</label>
						{{form.first_name }}
					</div>
					<div class="form-group col-md-4">
						<label  class="wlsm-font-bold">
							<span class="wlsm-important">*</span> Last Name:
						</label>
						{{form.last_name }}
					</div>

					<div class="form-group col-md-4">
						<label class="wlsm-font-bold">
							<span class="wlsm-important">*</span> Gender:
						</label><br>
						{{form.gender}}
					</div></div><br>
                    <div class="form-row">
					<div class="form-group col-md-4">
						<label  class="wlsm-font-bold">
							<span class="wlsm-important">*</span> Birth Date:
						</label><br>
						{{form.dob_date}}
					</div>
					<div class="form-group col-md-4">
						<label  class="wlsm-font-bold">
							Religion:
						</label>{{form.religion}}

					</div>
					<div class="form-group col-md-4">
						<label  class="wlsm-font-bold">
							Caste:
						</label>
						{{form.caste}}
					</div></div><br>
					<div class="form-row">
					<div class="form-group col-md-4">
						<label  class="wlsm-font-bold">
							Blood Group:
						</label>
						{{form.blood_group}}
					</div>
					<div class="form-group col-md-4">
						<label  class="wlsm-font-bold">
							Address:
						</label>
						{{form.address}}
					</div>
                 <div class="form-row">
					 <div class="form-group col-md-4">
						<label  class="wlsm-font-bold">
							Phone:
						</label>
						{{form.phone}}
					 </div></div></br>

					<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							<span class="wlsm-important">* </span>Email:
						</label>
						{{form.email}}
					</div>

					<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Admission No:
						</label><br>
						{{form.admn_no}}
					</div>
					 <div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Admission Date:
						</label><br>
						{{form.admn_date}}
					 </div></div><br>
	<div class="form-row">
		<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Fathers Name:
						</label><br>
						{{form.father_name}}
		</div>
		<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Mother's Name:
						</label><br>
						{{form.mother_name}}
		</div>
		<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Father's Occupation:
						</label><br>
						{{form.father_occupation}}
		</div>
		<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Mother's Occupation:
						</label><br>
						{{form.mother_occupation}}
		</div></div><br>


				<div class="form-row">
				<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Photo:
						</label><br>
                                          {% if form.instance.student_photo %}
                                               <img src="{{ form.instance.student_photo.url }}" alt="photo" width="150px" height="150px">
                                          {% endif %}
						{{form.student_photo}}
		</div>
					<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Roll No:
						</label><br>
						{{form.roll_no}}
		</div>
					<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Class:
						</label><br>
						{{form.class_name}}
		</div>
					<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Section:
						</label><br>
                                           <   
                                              
                                              {% for sc in sec %}
                                                  {{sc}} - {{sel}}
                                                 {% if sel == sc %}
                                                 
                                                   {{sc.id}} - {{sc}}
                                                 {% else %}
                                             
                                               {% endif %}
                                               {% endfor %}
                                             					 

		</div>
			</div><br>
	<div class="form-row">
				<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Academic Year:
						</label><br>
						{{form.ac_year}}
		</div>
		<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Student Status:
						</label><br>
						{{form.student_status}}
		</div>
                 
                
		<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">
							Username:
						</label><br>
                        {{form.usernm}}
		</div>
                

		<div class="form-group col-md-3">
						<label  class="wlsm-font-bold">

						</label><br>
						{{form.school_student}}
		</div></div>
	<br><br>
    <input type="submit" class="btn btn-success" value="Update">
 <script type='text/javascript'  src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script type='text/javascript'>
    $(document).ready(function(){

            $("#id_class_name").one("click", function() {
    var url = $("#addstudform").attr("data-uclass-url");
     var classId = $(this).val();
       $.ajax({
        url: url,
        data: {
          'Class_Id': classId
        },
        success: function (data) {
          $("#id_class_name").html(data);
        }
      });
         });

 $("#id_class_name").change(function(){
    var url = $("#addstudform").attr("data-section-url");
     var classId = $(this).val();
       $.ajax({
        url: url,
        data: {
          'Class_Id': classId
        },
        success: function (data) {
          $("#id_secs").html(data);
        }
      });
         });
      

});

</script>    


</form>
</div>
{% endblock %}
